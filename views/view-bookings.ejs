<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Bookings - Admin</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0px;
            padding: 0px;
            position: relative;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        .search-bar {
            text-align: center;
            margin-bottom: 20px;
             border: none;
        }
        .search-bar input {
            padding: 8px;
            width: 350px;
            border: none;
            box-shadow: 1px 2px 3px red; 
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        .actions a {
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 4px;
        }
        .edit {
            background-color: #4CAF50;
            color: white;
          
        }
        .delete {
            background-color: #f44336;
            color: white;
        }
        .view-details {
            background-color: #2196F3;
            color: white;
        }
        .edit:hover, .delete:hover, .view-details:hover {
            opacity: 0.8;
        }
        .no-bookings {
            text-align: center;
            color: #666;
        }
        .back-btn {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            border-radius: 4px;
            text-decoration: none;
        }
        .back-btn:hover {
            background-color: #1e6420;
        }
        label{
           font-weight: 800;
           font-size: 22px;
        }
      .mobile{
        display: none;
      }
      
        @media (max-width: 1363px) {
            h1{
                font-size: 25px;
            }
              
             
            .search-bar input {
            padding: 8px;
            width: 200px;
        }
      
             .mobile{
                 display: block;
                 border: 1px solid black;
                 padding: 10px;
                 margin: 5px;
                 background-color: rgb(243, 242, 186);
             }
a{
    text-decoration: none;
    font-size: 18px;
    padding: 5px;
    border-radius: 10px;
    margin-left:5px;
}
strong{
    color: #00796b;;
}
           
             #bookingContainer{
                display: none;
              
             }
             .back-btn{
                position: absolute;
            top: 5px;
            left:-0px;
            padding: 5px 10px;
            background-color: #4CAF50;
            color: white;
            font-size: 16px;
            border-radius: 4px;
            text-decoration: none;
                
             }
 
        }
    </style>
</head>
<body>
    <!-- Back to Home Button -->
  

    <h1>Manage Bookings</h1>
    <a href="/admin/dashboard" class="back-btn">Back</a>
   
    <!-- Search Bar -->
    <div class="search-bar">
        <label for="searchInput"><i class="fas fa-search"></i></label>
        <input type="text" id="searchInput" placeholder="Search by User Name, Contact, or Payment Status">
    </div>


      <!--  only for mobile -->
<div class="mobile" >
    <% bookings.forEach(booking => { %>
       <tr data-user-name="<%= booking.userName.toLowerCase() %>" 
            data-user-contact="<%= booking.userContact.toLowerCase() %>" 
            data-payment-status="<%= booking.paymentStatus.toLowerCase() %>">
           <p><strong>Booking ID:</strong> <%= booking._id %>   </p>                                           
           <p><strong>Room Number:</strong> <%= booking.room?.roomNumber || 'N/A' %>  </p>  
           <p><strong>Name:</strong> <%= booking.userName %> </p>  
           <p><strong>Email: </strong><%= booking.email %> </p>  
           <p><strong>Contact: </strong><%= booking.userContact %> </p>  
           <p><strong>StartDate:</strong> <%= new Date(booking.startDate).toLocaleDateString() %> </p>  
           <p><strong>EndDate:</strong> <%= new Date(booking.endDate).toLocaleDateString() %> </p>  
           <p><strong>Payment Status:</strong> <%= booking.paymentStatus %> </p>  
        
                <a href="/admin/bookings/edit/<%= booking._id %>" class="edit"><i class="fas fa-edit"></i>Edit</a>
                <a href="/admin/bookings/delete/<%= booking._id %>" class="delete" onclick="return confirm('Are you sure you want to delete this booking?')"><i class="fas fa-trash-alt"></i> Delete</a>
                <a href="/admin/bookings/details/<%= booking._id %>" class="view-details"><i class="fas fa-eye"></i> View Details</a>
       
    <% }) %> 

</div>
    <!-- Booking Table -->
    <div id="bookingContainer">
        <% if (bookings.length === 0) { %>
            <p class="no-bookings">No bookings found.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Booking ID</th>
                        <th>Room Number</th>
                        <th>User Name</th>
                        <th>User Email</th>
                        <th>Contact</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(booking => { %>
                        <tr data-user-name="<%= booking.userName.toLowerCase() %>" 
                            data-user-contact="<%= booking.userContact.toLowerCase() %>" 
                            data-payment-status="<%= booking.paymentStatus.toLowerCase() %>">
                            <td><%= booking._id %></td>
                            <td><%= booking.room?.roomNumber || 'N/A' %></td>
                            <td><%= booking.userName %></td>
                            <td><%= booking.email %></td>
                            <td><%= booking.userContact %></td>
                            <td><%= new Date(booking.startDate).toLocaleDateString() %></td>
                            <td><%= new Date(booking.endDate).toLocaleDateString() %></td>
                            <td><%= booking.paymentStatus %></td>
                            <td class="actions">
                                <a href="/admin/bookings/edit/<%= booking._id %>" class="edit"><i class="fas fa-edit"></i> Edit</a>
                                <a href="/admin/bookings/delete/<%= booking._id %>" class="delete" onclick="return confirm('Are you sure you want to delete this booking?')"><i class="fas fa-trash-alt"></i> Delete</a>
                                <a href="/admin/bookings/details/<%= booking._id %>" class="view-details"><i class="fas fa-eye"></i> View Details</a>
                            </td>
                        </tr>
                    <% }) %> 
                </tbody>
            </table>
        <% } %>
    </div>

    <script>
        const searchInput = document.getElementById('searchInput');
        const bookingContainer = document.getElementById('bookingContainer');
        const bookingRows = document.querySelectorAll('tr[data-user-name]');

        searchInput.addEventListener('input', () => {
            const query = searchInput.value.toLowerCase();

            bookingRows.forEach(row => {
                const userName = row.dataset.userName;
                const userContact = row.dataset.userContact;
                const paymentStatus = row.dataset.paymentStatus;

                if (
                    userName.includes(query) ||
                    userContact.includes(query) ||
                    paymentStatus.includes(query)
                ) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
</body>
</html>
