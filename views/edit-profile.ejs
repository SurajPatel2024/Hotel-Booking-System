<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<style>
    /* style.css */

body {
    margin: 0;
    padding: 0;
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f9;
    color: #333;
    line-height: 1.6;
}

/* Navigation bar */
nav {
    background: rgb(131,58,180);
    background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 50%, rgba(252,176,69,1) 100%);
    color: #fff;
    padding: 0.5rem 1rem;
    position: sticky;
    top: 0;
    z-index: 1000;
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
}

.logo {
    font-size: 1.5rem;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.logo i {
    margin-right: 0.5rem;
    color: #ffcc00;
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
}

.nav-links li {
    display: inline;
    font-size: 1rem;
}

.nav-links a {
    text-decoration: none;
    color: #fff;
    font-size: 1rem;
    font-weight: 600;
    transition: color 0.3s ease;
}

.nav-links a:hover {
    color: #d9ff00;
}

.user-dropdown {
    position: relative;
    color: #fff;
}

.user-dropdown .dropdown-menu {
    display: none;
    position: absolute;
    top: 120%;
    right: 0;
    background-color: #fff;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
    overflow: hidden;
    min-width: 200px;
    z-index: 100;
}

.user-dropdown:hover .dropdown-menu {
    display: block;
}

.dropdown-menu a {
    display: block;
    padding: 0.8rem 1rem;
    color: #004080;
    text-decoration: none;
    transition: background-color 0.3s ease;
}

.dropdown-menu a:hover {
    background-color: #f4f4f9;
}

/* Edit Profile Container */
.edit-profile-container {
    background-color: #fff;
    margin: 2rem auto;
    padding: 2rem;
    max-width: 500px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    text-align: center;
}

.edit-profile-container h2 {
    margin-bottom: 1rem;
    color: #004080;
}

.form-group {
    margin-bottom: 1rem;
    text-align: left;
}

.form-group label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: #333;
}

.form-group input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1rem;
    outline: none;
    transition: border-color 0.3s ease;
}

.form-group input:focus {
    border-color: #004080;
}

button[type="submit"] {
    background-color: #0b8000;
    color: #fff;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button[type="submit"]:hover {
    background-color: #036000;
}

/* Footer */
footer {
    background: rgb(131,58,180);
    background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 50%, rgba(252,176,69,1) 100%);
    color: #fff;
    text-align: center;
    padding: 1rem 0;
    margin-top: 2rem;
}

footer p {
    margin: 0;
    font-size: 0.9rem;
}

.alert-container {
    display: none;
    position: fixed;
    top: 1rem;
    left: 50%;
    transform: translateX(-50%);
    background-color: #158000;
    color: #fff;
    padding: 1rem 1.5rem;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    font-size: 1rem;
    font-weight: bold;
    animation: slide-down 0.5s ease, fade-out 3s ease 2.5s forwards;
}

.alert-container i {
    margin-right: 0.5rem;
    color: #ffffff;
}

@keyframes slide-down {
    from {
        transform: translateX(-50%) translateY(-50px);
        opacity: 0;
    }
    to {
        transform: translateX(-50%) translateY(0);
        opacity: 1;
    }
}

@keyframes fade-out {
    to {
        opacity: 0;
    }
}


/* delete btn */

   /* Modal Background */
   .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
}

/* Modal Content Box */
.modal-content {
    background: #fff;
    padding: 20px;
    width: 90%;
    max-width: 400px;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
    animation: fadeIn 0.3s ease-in-out;
}

/* Modal Heading */
.modal-content h2 {
    margin: 0 0 10px;
    font-size: 22px;
    color: #d9534f;
}

/* Modal Text */
.modal-content p {
    font-size: 16px;
    color: #555;
    margin-bottom: 20px;
}

/* Buttons */
.modal-buttons {
    display: flex;
    justify-content: center;
    gap: 15px;
}

.confirm-btn {
    background-color: #d9534f;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
}

.confirm-btn:hover {
    background-color: #c9302c;
}

.cancel-btn {
    background-color: #5bc0de;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
}

.cancel-btn:hover {
    background-color: #31b0d5;
}

/* Delete Account Button */
.delete-btn {
    background-color: #d9534f;
    color: white;
    border: none;
    padding: 10px 15px;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    display: block;
    margin: 20px auto;
}

.delete-btn:hover {
    background-color: #c9302c;
}

/* Fade In Animation */
@keyframes fadeIn {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
}

</style>
<body>
    <nav>
        <div class="nav-container">
            <h2 class="logo"> <i class="fas fa-crown"></i> Taj Hotel</h2>
            <ul class="nav-links">
                <li><a href="/UserHome"><i class="fas fa-home" style="font-size: 1.1rem;"></i> Home</a></li>
                <li class="user-dropdown" style="cursor: pointer;">
                    <i class="fas fa-user-circle" style="font-size: 1.1rem;"></i>
                    <span style="font-weight: 600;"><%= user.username %></span>
                </li>
            </ul>
        </div>
    </nav>

    <div class="edit-profile-container">
        <h2>Edit Profile</h2>
        <form id="editProfileForm" action="/edit-profile" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" value="<%= user.username %>" required>
                <small id="usernameError" style="color: red; display: none;">Username must only contain alphabets and no spaces.</small>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" required>
                <small id="emailError" style="color: red; display: none;">Please enter a valid email address.</small>
            </div>
            <button type="submit">Save Changes</button>

        </form>

    </div>
            <!-- Delete Account Button -->
<form id="deleteForm" action="/delete-account" method="POST">
    <button type="button" class="delete-btn" id="deleteAccountBtn">Delete Account</button>
</form>

<!-- Custom Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content">
        <h2>Delete Account</h2>
        <p>Are you sure you want to delete your account? This action cannot be undone.</p>
        <div class="modal-buttons">
            <button id="confirmDelete" class="confirm-btn">Yes, Delete</button>
            <button id="cancelDelete" class="cancel-btn">Cancel</button>
        </div>
    </div>
</div>


 
    
   <script>
    document.addEventListener("DOMContentLoaded", function () {
    const deleteModal = document.getElementById("deleteModal");
    const deleteAccountBtn = document.getElementById("deleteAccountBtn");
    const confirmDelete = document.getElementById("confirmDelete");
    const cancelDelete = document.getElementById("cancelDelete");
    const deleteForm = document.getElementById("deleteForm");

    // Show modal when delete button is clicked
    deleteAccountBtn.addEventListener("click", function () {
        deleteModal.style.display = "flex";
    });

    // Confirm delete action
    confirmDelete.addEventListener("click", function () {
        deleteForm.submit(); // Submit the form to delete the account
    });

    // Cancel delete action
    cancelDelete.addEventListener("click", function () {
        deleteModal.style.display = "none";
    });

    // Close modal if clicked outside content
    window.addEventListener("click", function (event) {
        if (event.target === deleteModal) {
            deleteModal.style.display = "none";
        }
    });
});

   </script>
    


    <div id="alertBox" class="alert-container">
        <i class="fas fa-check-circle"></i> Changes Saved Successfully!
    </div>
    <footer>
        <p>&copy; 2024 Taj Hotel. All Rights Reserved.</p>
    </footer>

    <script>
        document.getElementById('editProfileForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent form submission

            const username = document.getElementById('username').value;
            const email = document.getElementById('email').value;
            const usernameError = document.getElementById('usernameError');
            const emailError = document.getElementById('emailError');
            let formValid = true;

            // Reset error messages
            usernameError.style.display = 'none';
            emailError.style.display = 'none';

            // Validate username (only alphabetic characters and no spaces)
            if (!/^[A-Za-z]+$/.test(username)) {
                usernameError.style.display = 'block';
                formValid = false;
            }

            // Validate email (basic email pattern)
            if (!/^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$/.test(email)) {
                emailError.style.display = 'block';
                formValid = false;
            }

            // Simulate checking if the username or email already exists
            const existingUsers = [
                { username: 'existingUser', email: 'existing@example.com' }
            ];

            for (const user of existingUsers) {
                if (user.username === username || user.email === email) {
                    alert('Username or email already exists. Please choose another one.');
                    formValid = false;
                    break;
                }
            }

            if (formValid) {
                // Show success alert
                const alertBox = document.getElementById('alertBox');
                alertBox.style.display = 'block';

                // Simulate server processing delay
                setTimeout(() => {
                    event.target.submit(); // Submit the form after showing the alert
                }, 3000); // Wait for the alert animation to finish
            }
        });
    </script>
</body>
</html>
