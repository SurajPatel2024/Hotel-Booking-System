<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* General Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body Styling */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #007BFF, #0056b3);
            color: #333;
            line-height: 1.6;
            padding: 20px;
            overflow-x: hidden;
        }

        /* Container */
        .container {
            max-width: 1200px;
            margin: 20px auto;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        /* Headings */
        h1, h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-weight: bold;
            text-transform: uppercase;
        }

        /* Button Styling */
        .btn-custom {
            display: inline-block;
            background-color: #28a745;
            color: white;
            padding: 12px 25px;
            margin: 10px 0;
            border-radius: 6px;
            text-align: center;
            font-size: 16px;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }

        .btn-custom:hover {
            background-color: #218838;
        }

        .btn-custom:active {
            background-color: #1e7e34;
        }

        /* Room List Section */
        .room-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: space-between;
            margin-top: 20px;
        }

        /* Room Card Styling */
        .room-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            width: 48%;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .room-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
        }

        /* Room Image */
        .room-image img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-bottom: 2px solid #ddd;
        }

        /* Room Details */
        .room-details {
            padding: 15px;
        }

        .room-details p {
            margin-bottom: 8px;
            font-size: 14px;
            color: #555;
        }

        .room-details strong {
            color: #007BFF;
        }

        /* Room Actions */
        .room-actions {
            padding: 15px;
            display: flex;
            justify-content: space-between;
            background-color: #f9f9f9;
            border-top: 2px solid #ddd;
        }

        .edit-btn, .delete-btn {
            padding: 10px 15px;
            border-radius: 5px;
            font-size: 14px;
            text-align: center;
            transition: background-color 0.3s ease;
            font-weight: bold;
            text-transform: uppercase;
        }

        .edit-btn {
            background-color: #007BFF;
            color: white;
        }

        .edit-btn:hover {
            background-color: #0056b3;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
        }

        .delete-btn:hover {
            background-color: #c82333;
        }
         a{
            text-decoration: none;
         }
        /* Logout Button */
        a[href="/admin/logout"] {
            display: inline-block;
            background-color: #dc3545;
            color: white;
            padding: 12px 25px;
            margin-top: 20px;
            border-radius: 6px;
            text-align: center;
            font-size: 16px;
            transition: background-color 0.3s ease;
            font-weight: bold;
        }

        a[href="/admin/logout"]:hover {
            background-color: #c82333;
        }

        /* Navigation Links */
        a.nav-link {
            display: inline-block;
            background-color: #007BFF;
            color: white;
            padding: 12px 25px;
            border-radius: 6px;
            margin-bottom: 15px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s ease;
            text-align: center;
        }

        a.nav-link:hover {
            background-color: #0056b3;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .room-list {
                flex-direction: column;
            }

            .room-card {
                width: 100%;
            }

            .btn-custom, a[href="/admin/logout"], a.nav-link {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</head>
<body>
   
          
       
    <div class="container">
        <% if (a) { %>
        <p>Welcome! <span style="font-style: italic; color: #007BFF; font-weight: 600; font-size: 20px;"> <%= a %></span></p> 
            <h1>Super Admin Dashboard</h1>
          <% } else { %>
            <h1>Admin Dashboard</h1>
          <% } %>
        
        <a href="/view-bookings" class="btn-custom nav-link"><i class="fas fa-list"></i> View All Bookings</a>
        <% if (a) { %>
           
            <a href="/viewalladmin" class="btn-custom nav-link"><i class="fas fa-list"></i> View All Admins</a>
          <% } else { %>
             
          <% } %>
        <a href="/admin/register" class="btn-custom nav-link"><i class="fas fa-user-plus"></i> Add New Admin</a>
        <a href="/admin/rooms/new" class="btn-custom nav-link"><i class="fas fa-plus-circle"></i> Add New Room</a>
        <a href="/admin/messages" class="btn-custom nav-link"><i class="fas fa-envelope"></i> Messages</a>
        <a href="/admin/logout" class="btn-custom"><i class="fas fa-sign-out-alt"></i> Logout</a>

        <h2>Rooms</h2>

        <!-- Search Bar -->
        <div class="mb-4">
            <input 
                type="text" 
                id="searchInput" 
                class="form-control" 
                placeholder="Search rooms by number, type, or status..." 
            >
        </div>

        <div class="room-list" id="roomList">
            <% rooms.forEach(room => { %>
                <div class="room-card">
                    <div class="room-image">
                        <% if (room.image && room.image.data) { %>
                            <img src="data:<%= room.image.contentType %>;base64,<%= room.image.data.toString('base64') %>" alt="Room Image">
                        <% } else { %>
                            <img src="/images/default-room.jpg" alt="Default Room Image">
                        <% } %>
                    </div>
                    <div class="room-details">
                        <p><strong>Room Number:</strong> <span class="room-number"><%= room.roomNumber || 'N/A' %></span></p>
                        <p><strong>Type:</strong> <span class="room-type"><%= room.type || 'Not Specified' %></span></p>
                        <p><strong>Price:</strong> â‚¹<%= room.price || '0' %></p>
                        <p><strong>Status:</strong> <span class="room-status"><%= room.status || 'Unavailable' %></span></p>
                        <p><strong>Description:</strong> <%= room.description || 'No description provided.' %></p>
                    </div>
                    <div class="room-actions">
                        <a href="/admin/rooms/edit/<%= room._id %>" class="edit-btn"><i class="fas fa-edit"></i> Edit</a>
                        <a href="/admin/rooms/delete/<%= room._id %>" class="delete-btn"><i class="fas fa-trash-alt"></i> Delete</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- JavaScript for Search Functionality -->
    <script>
        document.getElementById('searchInput').addEventListener('input', function () {
            const query = this.value.toLowerCase(); // Convert input to lowercase for case-insensitive search
            const roomCards = document.querySelectorAll('.room-card'); // Get all room cards

            roomCards.forEach(card => {
                const roomNumber = card.querySelector('.room-number').textContent.toLowerCase();
                const roomType = card.querySelector('.room-type').textContent.toLowerCase();
                const roomStatus = card.querySelector('.room-status').textContent.toLowerCase();

                // Check if any field matches the search query
                if (roomNumber.includes(query) || roomType.includes(query) || roomStatus.includes(query)) {
                    card.style.display = ''; // Show the card
                } else {
                    card.style.display = 'none'; // Hide the card
                }
            });
        });
    </script>
</body>
</html>
