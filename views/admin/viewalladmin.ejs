<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        h1 {
            text-align: center;
            color: #fff;
            margin: 20px 0;
            font-size: 28px;
            display: flex;
            align-items: center;
            gap: 10px;
            animation: fadeIn 1s ease-in-out;
        }

        .admins {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 90%;
            max-width: 800px;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            animation: slideUp 0.8s ease-in-out;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            text-align: center;
            padding: 15px;
        }

        th {
            background: #ff6f61;
            color: white;
        }

        td span {
            font-weight: 700;
            font-size: 20px;
            color: #333;
        }

        button {
            background: #e63946;
            color: white;
            font-size: 18px;
            padding: 10px 15px;
            margin-left: 35%;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s ease;
            display: flex;
            align-items: center;
          
          
            gap: 5px;
        }

        button:hover {
            background: #b71c1c;
            transform: scale(1.05);
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        @media (max-width: 600px) {
            h1 {
                font-size: 24px;
            }
            .admins {
                width: 100%;
                padding: 10px;
            }
            table {
                font-size: 14px;
            }
            button {
                font-size: 16px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>
    <h1><i class="fa-solid fa-lock"></i> Admin Management</h1>
    <div class="admins">
        <table>
            <tr>
                <th>Admin Username</th>
                <th>Action</th>
            </tr>
            <% admins.forEach(admin => { %>
                <% if (admin.username !== "Suraj") { %>
                <tr>
                    <td><span><%= admin.username %></span></td>
                    <td>
                        <form action="/viewadmin/delete/<%= admin._id %>" method="post">
                            <button><i class="fa-solid fa-trash"></i> Delete</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            <% }); %>
        </table>
    </div>
</body>
</html>
